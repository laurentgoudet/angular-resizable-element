{
  "compilerOptions": {
    "outDir": "dist/esm",
    "declaration": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2015", "dom"]
  },
  "files": [
    "src/index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "angular-resizable-element.js",
    "flatModuleId": "angular-resizable-element",
    "annotateForClosureCompiler": true
  }
}

